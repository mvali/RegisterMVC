@{ 
    ViewBag.PageTitle = "Payment";
    ViewBag.MetaDescription = "payment metadescription text";
}
@section Scripts{
<script src="https://js.stripe.com/v3/"></script>

<script src="/jsLive/stripeindexP.js" data-rel-js></script>
<script src="~/assets/scripts/stripeindexP.js" data-rel-js></script>

<script src="/jsLive/stripexample3.js" data-rel-js></script>
<script src="~/assets/scripts/stripexample3.js" data-rel-js></script>
<script src="~/assets/scripts/payment.js" data-rel-js></script>
@if (Register.Models.Job.j.Paid == true){<script>var paid = 1;</script>}
}
@section Styles{
<link rel="stylesheet" type="text/css" href="~/assets/css/stripebase.css" data-rel-css="" />
<link rel="stylesheet" type="text/css" href="~/assets/css/stripexample3.css" data-rel-css="" />
<style>
    .errorstripe {
        margin-top: 60px !important;
    }
</style>
}
@model Register.Models.Payment
<section class="book-page">
    <div class="container">
        <h3 class="common-head"> Confirm your shoot details</h3>
        <div class="book-inner">
            <div class="modal fade checkcodes" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span>
                                    <i class="fa fa-angle-left" aria-hidden="true"></i>
                                </span>
                            </button>
                            <h4 class="modal-title" id="myModalLabel">Add Discount Code</h4>
                        </div>
                        <div class="modal-body">
                            <span id="promomsg" class=""></span>
                            <input type="text" placeholder="xxxx - xxxx - xxxx" id="promoCode" value="@ViewBag.promo"/>
                            <button class="check-code" id="bPromoCheck">CHECK CODE</button>
                        </div>
                    </div>
                </div>
            </div>
            @using (Html.BeginForm("Index", "Payment", FormMethod.Post, new { @id = "Form1", @name = "Form1" }))
            {@Html.AntiForgeryToken()
            <div class="form-group">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <table>
                        <tbody>
                            <tr>
                                <td>@ViewBag.package.Name package</td>
                                <td>$@Utils.MathRound(ViewBag.package.Price) @ViewBag.package.Currency</td>
                            </tr>
                            <!--@if (ViewBag.servicesList.Count > 0)
                            {
                                <tr>
                                    <td>Optional Services:</td>
                                    <td></td>
                                </tr>
                            }-->
                            @foreach (var item in ViewBag.servicesList)
                            {
                                <tr>
                                    <td><span class="text-info">@item.Name</span></td>
                                    <td><span class="text-info">$@Utils.MathRound(item.Price) @item.Currency</span></td>
                                </tr>
                            }
                            @if (ViewBag.promoDiscount > 0)
                            {
                                <tr>
                                    <td><span class="text-success">Promocode "@ViewBag.promo" discount</span></td>
                                    <td><span class="text-success">- $@Utils.MathRound(ViewBag.promoDiscount) @ViewBag.package.Currency</span></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td>Total</td>
                                <td>$@Utils.MathRound(ViewBag.totalAmount) @ViewBag.package.Currency
                                    <span id="job_amount">
                                        <p>
                                            <!--currencySimbol Utils.MathDecimals(amount) currencyName
                                            @if ("" == "currencyOther")
                                            {
                                                <span>($&nbsp; Utils.MathDecimals(amountUsd)&nbsp;USD) </span>
                                            }-->
                                        </p>
                                    </span>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                    <a href="#" class="add-discount" data-toggle="modal" data-target="#myModal">Add discount code</a>
                </div>

                <div class="col-lg-12 col-md-12 col-xs-12@(Register.Models.Job.j.Paid? " hider" : "")" id="ccdetails">
                    <hr /><h3 class="common-head payment-head">&nbsp;<br />Your payment details<br />&nbsp;</h3>
                    <div class="example example3">
                        <div class="errorstripe" role="alert">
                            <svg xmlns="http://www.w3.org/2000/svg" width="17" height="17" viewBox="0 0 17 17">
                                <path class="base" fill="#000" d="M8.5,17 C3.80557963,17 0,13.1944204 0,8.5 C0,3.80557963 3.80557963,0 8.5,0 C13.1944204,0 17,3.80557963 17,8.5 C17,13.1944204 13.1944204,17 8.5,17 Z"></path>
                                <path class="glyph" fill="#FFF" d="M8.5,7.29791847 L6.12604076,4.92395924 C5.79409512,4.59201359 5.25590488,4.59201359 4.92395924,4.92395924 C4.59201359,5.25590488 4.59201359,5.79409512 4.92395924,6.12604076 L7.29791847,8.5 L4.92395924,10.8739592 C4.59201359,11.2059049 4.59201359,11.7440951 4.92395924,12.0760408 C5.25590488,12.4079864 5.79409512,12.4079864 6.12604076,12.0760408 L8.5,9.70208153 L10.8739592,12.0760408 C11.2059049,12.4079864 11.7440951,12.4079864 12.0760408,12.0760408 C12.4079864,11.7440951 12.4079864,11.2059049 12.0760408,10.8739592 L9.70208153,8.5 L12.0760408,6.12604076 C12.4079864,5.79409512 12.4079864,5.25590488 12.0760408,4.92395924 C11.7440951,4.59201359 11.2059049,4.59201359 10.8739592,4.92395924 L8.5,7.29791847 L8.5,7.29791847 Z"></path>
                            </svg>
                            <span class="message"></span>
                        </div>
                        @Html.HiddenFor(x => x.token)
                        <input type="hidden" id="token" name="token" value="" />
                        <input type="hidden" id="hjobname" value="@ViewBag.job.JobPersonalInfo.FirstName @ViewBag.job.JobPersonalInfo.LastName" />
                        <input type="hidden" id="hjobcity" value="@ViewBag.job.Zip.CityBill" />
                        <input type="hidden" id="hjobstate" value="@ViewBag.job.Zip.StateBill" />
                        <input type="hidden" id="hjobzip" value="@ViewBag.job.Zip.ZipCodeBill" />
                    </div>
                </div>

                <fieldset id="or-credit-card" class="col-md-12 col-sm-12 col-xs-12 form-horizontal@(Register.Models.Job.j.Paid? " hider" : "")">
                    <!-- *** Credit Card - form *** -->

                    <div class="form-group col-lg-12 col-md-12 col-xs-12">
                        <div class="col-lg-5 col-md-5 col-xs-5 text-left">
                            <label class="control-label">CREDIT CARD <span class="text-danger">*</span></label>
                        </div>
                        <div class="col-lg-7 col-md-7 col-xs-7">
                            <div class="example example3">
                                <div id="example3-card-number" class="field empty"></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-lg-12 col-md-12 col-xs-12">
                        <div class="col-lg-5 col-md-5 col-xs-5 text-left">
                            <label class="control-label">EXPIRE DATE <span class="text-danger">*</span></label>
                        </div>
                        <div class="col-lg-7 col-md-7 col-xs-7">
                            <div class="example example3">
                                <div id="example3-card-expiry" class="field empty"></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-lg-12 col-md-12 col-xs-12">
                        <div class="col-lg-5 col-md-5 col-xs-5 text-left">
                            <label class="control-label">CVC <span class="text-danger">*</span></label>
                        </div>
                        <div class="col-lg-7 col-md-7 col-xs-7">
                            <div class="example example3">
                                <div id="example3-card-cvc" class="field empty"></div>
                            </div>
                        </div>
                    </div>

                </fieldset>
            </div>
            <span style="position:absolute; top:-80px; right:42%; height:20px; padding:10px 10px; text-align:center; display:none;" class="uk-icon-color-red uk-align-center" id="sProcessing" name="sProcessing"><img id="imgProgress" src="/Images/animatedprogress.gif" border="0" width="30" style="vertical-align:middle;" /><br />Processing. Please wait...</span>
            if (ViewBag.msg == -1)
            {<div class="text-danger">Temporarry error. Please contact us.</div>}
            if (ViewBag.msg == -2)
            {<div class="text-danger">Payment failed. Your credentials could not be validated.</div>}
            if (ViewBag.msg == -3)
            {<div class="text-danger">Payment failed. Please check your credit card details.</div>}
            if (ViewBag.msg == -10)
            { <div class="text-danger">Payment canceled. Your order was already submited. If you need to modify any data please contact us. Thank You.</div>}
            <button class="sign-btn@(Register.Models.Job.j.Paid? " hider" : "")" id="bPay" value="PAY">Continue with credit card</button>

            <!--<input type="text" placeholder="Continue with credit card" class="card-detail">
            <a href="@Url.Action("Submited", "Job")" class="paypal">Continue with PayPal</a>-->
            }
            
        </div>
    </div>
</section>